# Energy Data Simulator - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# MQTT Broker Configuration
# ============================================
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=energy-simulator

# ============================================
# Simulation Mode
# ============================================
# Options: development, production
NODE_ENV=development

# Simulation speed multiplier (1 = realtime, 60 = 1 hour per minute)
TIME_MULTIPLIER=1

# Publishing interval in milliseconds (10000 = 10 seconds)
PUBLISH_INTERVAL_MS=10000

# ============================================
# Device ID Overrides (for production)
# ============================================
# Replace these with your actual Tasmota/Shelly device IDs

# Tasmota Devices
TASMOTA_DISHWASHER_ID=tasmota_dishwasher_001
TASMOTA_BOILER_ID=tasmota_boiler_001
TASMOTA_AC_ID=tasmota_ac_001
TASMOTA_WASHER_ID=tasmota_washer_001

# Shelly Pro 3EM
SHELLY_3EM_ID=shellypro3em-house001

# ============================================
# Feature Flags
# ============================================
ENABLE_FILE_LOGGING=true
ENABLE_BLOCKCHAIN_HASHING=true
ENABLE_CONSOLE_STATUS=true

# Status display interval (how often to show status summary)
STATUS_DISPLAY_INTERVAL_MS=30000

# ============================================
# Output Configuration
# ============================================
OUTPUT_DIRECTORY=./simulation-output