---
import BaseLayout from './BaseLayout.astro';

interface Props {
    title: string;
    activeNav: 'overview' | 'devices' | 'reports';
}

const { title, activeNav } = Astro.props;
---
<BaseLayout title={title} activeNav={activeNav}>
    <main class="p-4 sm:p-6 lg:p-8 bg-gray-50 min-h-screen">
        <slot />
    </main>
</BaseLayout>
