# Energy Prediction Service - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Server Configuration
# ============================================
SERVICE_PORT=8000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=mongodb://localhost:27017
DATABASE_NAME=telemetry-db
DATABASE_COLLECTION=sensor-measurements

# Connection pooling (advanced)
# DATABASE_MAX_POOL_SIZE=10
# DATABASE_MIN_POOL_SIZE=2
# DATABASE_SERVER_SELECTION_TIMEOUT_MS=5000
# DATABASE_CONNECT_TIMEOUT_MS=5000

# ============================================
# Model Training
# ============================================
RETRAIN_INTERVAL_HOURS=24
MIN_RELIABLE_DATA_DAYS=0

# ============================================
# Hyperparameter Tuning
# ============================================
ENABLE_AUTO_TUNING=true
TUNING_INTERVAL_DAYS=7

# ============================================
# Resource Limits
# ============================================
MAX_FORECAST_HOURS=48
MAX_ANOMALY_HOURS=48
REQUEST_TIMEOUT_SECONDS=30

# ============================================
# Anomaly Detection (advanced)
# ============================================
# ANOMALY_MIN_POWER_DIFF=50
# ANOMALY_SPIKE_THRESHOLD=1.5
# ANOMALY_DIP_THRESHOLD=0.5